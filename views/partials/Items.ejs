<!--! All Items -->
<section id="items" class="items container mx-auto my-8">
    <h1 class="font-bold text-4xl">All Food Items</h1>

    <!-- All Items -->
    <div class="items my-3">
        <div class="grid gap-5 grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5">
            <!-- Item card -->
            <% foodItems.forEach(function(item) { %>
                <div class="item-card p-3 flex flex-col gap-3 border-2 rounded-md hover:border-green-500 hover:bg-green-100 transition-all duration-200">
                    <img class="w-full h-80 rounded-lg object-cover" src="../../img/items/<%= item.image %>" alt="">
    
                    <div class="text-center flex flex-col items-center">
                        <h2 class="font-bold text-xl"><%= item.name %></h2>
                        <div class="flex items-center justify-center gap-2">
                            <h4 class="font-semibold text-xl">VEG</h4>
                            <img src="../../img/veg.png" class="w-8" alt="">
                        </div>
                    </div>
    
                    <div class="flex items-center justify-around">
                        <span class="font-semibold text-lg">Rs. <%= item.price %></span>
                        <button item-data="<%= JSON.stringify(item) %>" class="add-to-cart flex items-center gap-1 font-semibold border-2 border-green-500 rounded-full py-1 px-4 hover:bg-green-500 text-green-500 hover:text-white transition-all duration-200">
                            <span>+</span>
                            <span>Add</span>
                        </button>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>