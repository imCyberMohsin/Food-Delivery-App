<!--? Signup Form Component -->
<section class="login h-screen flex justify-center pt-16 bg-gray-200">
    <div class="w-3/4 lg:w-1/4">
        <form action="/signup" method="post" class="bg-white shadow-xl rounded-xl px-8 pt-6 pb-8 mb-4">
            <h1 class="text-3xl text-center font-semibold">Signup</h1>
            <div class="border-b-[2px] my-3"></div>

            <div class="mb-2">
                <label for="name" class="block text-gray-700 text-base font-semibold mb-2">Name</label>
                <input name="name" id="name" type="text" class="text-base shadow appearance-none border-4 focus:border-green-300 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight outline-none shadow-outline transition-all duration-200" placeholder="Enter Your Name" required>
            </div>

            <div class="mb-2">
                <label for="email" class="block text-gray-700 text-base font-semibold mb-2">Email</label>
                <input name="email" id="email" type="email" class="text-base shadow appearance-none border-4 focus:border-green-300 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight outline-none shadow-outline transition-all duration-200" placeholder="Enter Your Email" required>
            </div>

            <div class="mb-6">
                <label for="password" class="block text-gray-700 text-base font-semibold mb-2">Password</label>
                <input name="password" id="password" type="password" class="text-base shadow appearance-none border-4 focus:border-green-300 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight outline-none shadow-outline transition-all duration-200" placeholder="•••••••••••" required>
                <!-- <p class="text-red-500 text-xs italic">Please choose a password.</p> -->
            </div>

            <div class="flex items-start mb-6">
                <label for="remember" class="ms-2 text-base font-medium text-gray-700">Already have an account? <a href="/login" class="text-green-600 hover:underline dark:text-green-500">login</a></label>
            </div>

            <div class="flex items-center justify-between">
                <button class="w-full text-center bg-green-500 hover:bg-green-700 text-xl text-white font-bold py-2 px-5 rounded-full focus:outline-none focus:shadow-outline" type="submit">Signup</button>
                <!-- <a class="inline-block align-baseline font-bold text-base text-green-500 hover:text-green-800" href="#">
                    Forgot Password?
                </a> -->
            </div>
        </form>
        <p class="text-center text-gray-500 text-xs">
            &copy;2024 Mohsin Ansari. All rights reserved.
        </p>
    </div>
</section>